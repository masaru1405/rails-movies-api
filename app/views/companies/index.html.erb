<h1>Companies#index</h1>
<p>Find me in app/views/companies/index.html.erb</p>

<table class="table">
   <tbody>
      <% @companies['results'].each do |company| %>
         <tr>
            <td>
               <%= company['name'] %>
               <% if company['origin_country'] != "" %>
                  <span class="badge badge-secondary">
                     <%= company['origin_country'] %>
                  </span>
               <% end %>
            </td>
         </tr>
      <% end %>
   </tbody>
</table>

<div>
   <%= link_to "Previous", companies_path(page: @page-1) %> |
   <%= link_to "Next", companies_path(page: @page+1) %>
</div>
