<h1>Tvs#index</h1>
<p>Find me in app/views/tvs/index.html.erb</p>

<div>
   <%= link_to "Previous", tvs_path(page: @page-1) %> |
   <%= link_to "Next", tvs_path(page: @page+1) %>
</div>

<% @tvs['results'].each do |tv| %>

 <div class="card_tv rounded-left">
      <div class="card border-0">
         <div class="card-horizontal">
            <div class="img-square-wrapper">
               <% if tv['poster_path'] %>
                  <%= image_tag "https://image.tmdb.org/t/p/w94_and_h141_bestv2/#{tv['poster_path']}", class: "card-img-left", width: "94", height: "141" %>
               <% else %>
                  <%= image_tag "notfound.png", class: "no_image", width: "94", height: "141" %>
               <% end %>
            </div>
         <div class="card-body">
            <h5 class="card-title"><%= tv['name'] %></h5>
            <h6 class="card-subtitle mb-2 text-muted">
               <%= tv['first_air_date'] != nil ? format_date_br(tv['first_air_date']) : "" %>
            </h6>
            <p class="card-text">
               <% if tv['overview'] != "" %>
                  <%= tv['overview'].truncate(200) %>
               <% else %>
                  Não há sinopse traduzida para o português.
               <% end %>
            </p>
         </div>
      </div>
   </div>

<% end %>



