<h1>Movie - Index</h1>

<%= render 'menu' %>

<%#= @search_all.size %>

<%
=begin%>
<% count_types(@search_multi) %>
<p>Movies: <%= @movie %> | TVs: <%= @tv %> | Persons: <%= @person %></p>
<%
=end%>

<%
=begin%>
<% @search_multi['results'].each do |s| %>
   <% if s['media_type'] == 'tv' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% elsif s['media_type'] == 'person' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['profile_path']}", width: "70", height: "90")%>
      <hr>
   <% else %> <!--Movie-->
      <p><%= s['title'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% end %>
<% end %>
<%
=end%>

<% @movies['results'].each do |movie| %>
   <div>
      <h6><%= movie['title'] %></h6>
      <% if movie['poster_path'] %>
         <%= image_tag "https://image.tmdb.org/t/p/w500/#{movie['poster_path']}", width: "94", height: "141" %>
      <% else %>
         <%= image_tag "notfound.png", width: "94", height: "141" %>
      <% end %>

      <!-- Button to Open the Modal -->
      <button type="button" class="btn btn-outline-light text-dark" data-toggle="modal" data-target="#infoModal">
         <i class="bi bi-info-circle" id="icon_info"></i>
      </button>

      <!-- The Modal -->
      <div class="modal fade" id="infoModal">
         <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

               <!-- Modal Header -->
               <div class="modal-header">
                  <h4 class="modal-title">Title</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
               </div>

               <!-- Modal body -->
               <div class="modal-body">
                  Lorem Ipsum...
               </div>

            </div>
         </div>
      </div>
   </div>
<% end %>

<div>
   <%= link_to "Previous", movies_path(page: @page-1) %> |
   <%= link_to "Next", movies_path(page: @page+1) %>
</div>






