<h1>Movie - Index</h1>

<%= render 'menu' %>

<%
=begin%>
<% @movies['results'].each do |movie| %>
   <p><%= movie['title'] %></p>
<% end %>
<%
=end%>

<% @search_multi['results'].each do |s| %>
   <% if s['media_type'] == 'tv' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% elsif s['media_type'] == 'person' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['profile_path']}" ,
      width: "70", height: "90")
      %>
      <hr>
   <% else %> <!--Movie-->
      <p><%= s['title'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% end %>
<% end %>



