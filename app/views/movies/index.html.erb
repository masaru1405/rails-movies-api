<h1>Movie - Index</h1>

<%#= @search_all.size %>

<%
=begin%>
<% count_types(@search_multi) %>
<p>Movies: <%= @movie %> | TVs: <%= @tv %> | Persons: <%= @person %></p>
<%
=end%>

<%
=begin%>
<% @search_multi['results'].each do |s| %>
   <% if s['media_type'] == 'tv' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% elsif s['media_type'] == 'person' %>
      <p><%= s['name'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['profile_path']}", width: "70", height: "90")%>
      <hr>
   <% else %> <!--Movie-->
      <p><%= s['title'] %> | <%= s['media_type'] %></p> 
      <%= image_tag("https://image.tmdb.org/t/p/w500/#{s['poster_path']}" ,
      width: "94", height: "141")
      %>
      <hr>
   <% end %>
<% end %>
<%
=end%>

<% @movies['results'].each do |movie| %>

   <div class="card">
      <div class="card-horizontal">
         <div class="img-square-wrapper">
            <% if movie['poster_path'] %>
               <%= image_tag "https://image.tmdb.org/t/p/w94_and_h141_bestv2/#{movie['poster_path']}", class: "card-img-left",width: "94", height: "141" %>
            <% else %>
               <%= image_tag "notfound.png", class: "card-img-left", width: "94", height: "141" %>
            <% end %>
         </div>
         <div class="card-body">
            <h5 class="card-title"><%= movie['title'] %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
   </div>


